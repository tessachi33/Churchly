<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity"
    android:background="#99D1E3">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/churchly_text"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/churchly_text"
        android:background="@android:color/transparent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/churchly_cross"
        android:src="@drawable/churchly_cross"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textLog"
        android:layout_alignStart="@+id/textLog"
        android:layout_below="@+id/signupButton"
        android:layout_alignRight="@+id/textLog"
        android:layout_alignEnd="@+id/textLog"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email"
        android:text="Email"
        android:hint="email"
        android:textStyle="bold"
        android:typeface="normal"
        android:background="@android:color/white"
        android:layout_below="@+id/textLog"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:padding="10dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:textStyle="bold"
        android:hint="password"
        android:background="@android:color/white"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_below="@+id/email"
        android:layout_marginTop="16dp"
        android:padding="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Log-in!"
        android:id="@+id/textLog"
        android:textSize="@android:dimen/app_icon_size"
        android:layout_below="@+id/churchly_text"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Log-in"
        android:id="@+id/loginButton"
        android:textStyle="bold"
        android:background="#ffcbcb"
        android:layout_below="@+id/password"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password"
        android:layout_marginTop="15dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/signupButton"
        android:layout_below="@+id/loginButton"
        android:layout_alignLeft="@+id/loginButton"
        android:layout_alignStart="@+id/loginButton"
        android:layout_marginTop="20dp"
        android:background="#ffdbdb"
        android:textStyle="bold" />
</RelativeLayout>
