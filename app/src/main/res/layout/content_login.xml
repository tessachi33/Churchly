<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_login"
    tools:context="io.github.tessachi33.churchly.ui.loginActivity"
    android:background="#99D1E3"
    >
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/churchly_text"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/churchly_text"
        android:background="@android:color/transparent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Hi, friend"
        android:id="@+id/textLog"
        android:textSize="@android:dimen/app_icon_size"
        android:layout_below="@+id/churchly_text"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/churchScroll"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textLog"
        android:layout_alignParentBottom="true" >

    </ScrollView>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_below="@+id/textLog"
        android:layout_alignLeft="@+id/textLog"
        android:layout_alignStart="@+id/textLog"
        android:layout_alignRight="@+id/textLog"
        android:layout_alignEnd="@+id/textLog" />

</RelativeLayout>
